			{%- if se_stts.icon_heading != blank -%}
	            <span class="t4s-cbl"><i class="{{ se_stts.icon_heading }}"></i></span>
	        {%- endif -%}
		{%- endif -%}
		{%- if se_stts.top_subheading != blank -%}<span class="t4s-section-des t4s-subtitle">{{ se_stts.top_subheading }}</span>{%- endif -%}
	</div>
