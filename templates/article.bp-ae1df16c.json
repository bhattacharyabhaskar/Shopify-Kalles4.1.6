    "c8edad19-8a57-4a31-b1d8-466b7e964ffb": {
      "type": "image_text",
      "blocks": {
        "template--16764257042665__c8edad19-8a57-4a31-b1d8-466b7e964ffb-1683390548f68fbfc9-1": {
          "type": "bl_text",
          "settings": {
