    "0dad2d0d-3b85-4e6a-a232-dc44e37b3984": {
      "type": "image_text",
      "blocks": {
        "template--16764257042665__0dad2d0d-3b85-4e6a-a232-dc44e37b3984-1683390548f68fbfc9-1": {
          "type": "bl_text",
          "settings": {
            "col_dk": "12",
