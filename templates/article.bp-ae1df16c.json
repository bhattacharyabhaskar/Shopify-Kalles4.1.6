    "cb8ce248-9486-4bde-ba37-2a530620140d": {
      "type": "image_text",
      "blocks": {
        "template--16764257042665__cb8ce248-9486-4bde-ba37-2a530620140d-1683390548f68fbfc9-1": {
          "type": "bl_text",
